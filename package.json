{
  "name": "realayers",
  "version": "2.2.0",
  "description": "Layer Components for React - Dialogs, Drawers, Tooltips, Popovers",
  "scripts": {
    "build": "rollup -c",
    "test": "jest --env=jsdom",
    "prettier": "prettier --loglevel warn --write 'src/**/*.{ts,tsx,js,jsx}'",
    "start": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "chromatic": "npx chromatic --project-token 15klwb1zctw --auto-accept-changes"
  },
  "source": "src/index.ts",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.js",
  "style": "dist/index.css",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reaviz/realayers.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "reactjs",
    "tooltip",
    "dialog",
    "drawer",
    "popover"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/reaviz/realayers/issues"
  },
  "homepage": "https://github.com/reaviz/realayers#readme",
  "dependencies": {
    "classnames": "^2.2.6",
    "focus-trap-react": "^8.1.0",
    "rdk": "^4.1.4"
  },
  "peerDependencies": {
    "framer-motion": "^2.1.2",
    "react": ">=16",
    "react-dom": ">=16"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.10.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/polyfill": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/runtime": "^7.10.5",
    "@storybook/addon-knobs": "6.0.27",
    "@storybook/addon-storysource": "^6.0.27",
    "@storybook/addons": "^6.0.27",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.0.27",
    "@testing-library/react": "^11.0.4",
    "@types/classnames": "^2.2.10",
    "@types/jest": "^26.0.5",
    "@types/react": "^16.9.51",
    "@types/react-dom": "^16.9.8",
    "@types/topojson-client": "^3.0.0",
    "autoprefixer": "^9.8.5",
    "babel-loader": "^8.1.0",
    "chromatic": "^5.2.0",
    "css-loader": "^4.3.0",
    "framer-motion": "^2.8.0",
    "husky": "^4.2.5",
    "jest": "^26.5.2",
    "jest-junit": "^12.0.0",
    "lint-staged": "^10.2.11",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rollup": "^2.29.0",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-peer-deps-external": "2.2.3",
    "rollup-plugin-postcss": "3.1.3",
    "rollup-plugin-postcss-modules": "2.0.1",
    "rollup-plugin-sourcemaps": "0.6.3",
    "rollup-plugin-typescript2": "0.26.0",
    "sass-loader": "^10.0.3",
    "style-loader": "^1.2.1",
    "ts-jest": "^26.4.1",
    "ts-loader": "^8.0.1",
    "typescript": "^3.9.7"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/.storybook/",
      "<rootDir>/storybook-static/",
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec|test).ts?(x)"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "./coverage"
        }
      ]
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
